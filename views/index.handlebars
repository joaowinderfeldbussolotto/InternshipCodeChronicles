<form id="id-selector" action="/filter/" method="GET">
    <div class="form-floating col-auto">
        <input type="number" class="form-control" id="id" name="id" placeholder="Enter xkcd ID" value="0">
        <label for="floatingInput">Search for Comic Id:</label>
    <div class="col-auto">
        <button class="btn btn-dark mb-3" type="submit">Submit</button>
    </div>
    </div>
</form>
<div class="container">
    <div class="row">
        <div class="col-md-6 bg-dark-subtle text-emphasis-dark">
            <div class="d-flex justify-content-md-center align-items-center vh-100">
                <img src="{{ author.thumbnailUrl }}" alt="">
                <p>{{{ author.excerpt }}}</p>
            </div>
        </div>
        <div class="col-md-6 bg-dark text-white">
            <div class="d-flex justify-content-md-center align-items-center vh-100 ">
                <p>"{{ quote.quote }}"</p>
            </div>
        </div>
    </div>
</div>